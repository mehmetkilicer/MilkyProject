@model List<MilkyProject.DtoLayer.DTOs.UIGalleryDtos.ResultGalleryDto>
@{
    ViewData["Title"] = "GalleryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
    int count = 0;

}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Galeri Listesi</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Url</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Admin/AdminGallery/DeleteGallery/@item.GalleryId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminGallery/UpdateGallery/@item.GalleryId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/AdminGallery/AddGallery" class="btn btn-outline-primary">Yeni Resim Ekle</a>
                </div>
            </div>
        </div>
    </div>
