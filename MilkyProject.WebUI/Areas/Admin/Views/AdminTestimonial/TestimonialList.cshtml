@model List<MilkyProject.DtoLayer.DTOs.UITestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
    int count = 0;

}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Müşteri Yorum Listesi</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Yorum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.ImageUrl" style="width:60px;height:60px;border-radius:50%" /><br /> @item.NameSurname</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Admin/AdminTestimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/AdminTestimonial/AddTestimonial" class="btn btn-outline-primary">Yeni Müşteri Yorumu Ekle</a>
                </div>
            </div>
        </div>
    </div>
