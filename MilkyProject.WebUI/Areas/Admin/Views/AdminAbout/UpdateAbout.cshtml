@model MilkyProject.DtoLayer.DTOs.UlAboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Hakkımızda Alanı Güncelle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="AboutID" />
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Acıklama" />
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

