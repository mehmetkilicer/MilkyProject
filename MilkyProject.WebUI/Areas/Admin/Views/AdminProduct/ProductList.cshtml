@model List<MilkyProject.WebUI.Dtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
    int count = 0;

}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Ürünler Listesi</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Eski Fiyat</th>
                                <th>Yeni Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.productName</td>
                                    <td>@item.oldPrice</td>
                                    <td>@item.newPrice</td>
                                    @if (item.Status)
                                    {
                                        <td><span style="color:green;">Aktif</span></td>
                                    }
                                    else
                                    {
                                        <td><span style="color:red;">Pasif</span></td>
                                    }
                             
                                    <td><a href="/Admin/AdminProduct/DeleteProduct/@item.productId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminProduct/UpdateProduct/@item.productId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/AdminProduct/CreateProduct" class="btn btn-outline-primary">Yeni Ürün Ekle</a>
                </div>
            </div>
        </div>
    </div>
