@model MilkyProject.WebUI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Yeni Ürün Ekle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <div class="form-group">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="productName" placeholder="Ürün Adı" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Eski Fiyat</label>
                        <input type="text" class="form-control" asp-for="oldPrice" placeholder="Eski Fiyat" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Yeni Fiyat</label>
                        <input type="text" class="form-control" asp-for="newPrice" placeholder="Yeni Fiyat" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Görsel Link</label>
                        <input type="text" class="form-control"  asp-for="imageUrl" placeholder="Görsel Link" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ürün Kategorisi</label>
                        <input type="text" class="form-control" asp-for="CategoryId" placeholder="Görsel Link" />

                    </div>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

