@model List<MilkyProject.DtoLayer.DTOs.UIMemberDtos.ResultMemberDto>
@{
    ViewData["Title"] = "MemberList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
    int count = 0;

}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Çalışanlar Listesi</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Ünvan</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.ImageUrl" style="width:65px;height:65px; border-radius:60%" /> @item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Admin/AdminMember/DeleteMember/@item.MemberID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminMember/UpdateMember/@item.MemberID" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/AdminMember/AddMember" class="btn btn-outline-primary">Yeni Çalışan Ekle</a>
                </div>
            </div>
        </div>
    </div>
