@model List<MilkyProject.DtoLayer.DTOs.UISliderDtos.ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Slider Listesi</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Görsel URl</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Description1</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.Description2</td>
                                
                                    <td><a href="/Admin/AdminSlider/UpdateSlider/@item.SliderId" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="/Admin/AdminSlider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/AdminSlider/AddSlider" class="btn btn-outline-primary">Yeni Slider Ekle</a>
                </div>
            </div>
        </div>
    </div>

