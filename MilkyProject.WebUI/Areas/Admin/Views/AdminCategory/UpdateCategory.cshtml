@model MilkyProject.WebUI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Kategori Güncelle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="form-group">
                        <label class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı" />
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
