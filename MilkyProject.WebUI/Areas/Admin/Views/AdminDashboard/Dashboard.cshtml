@model List<MilkyProject.DtoLayer.DTOs.UIContactDtos.ResultContactDto>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/AdminLayout/_NewAdminLayout.cshtml";

}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Dashboard</h2>
                </div>
            </div>
        </div>
        <div class="row column1">
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30 yellow_bg">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-user"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.messageCount</p>
                            <p class="head_couter">Gelen Mesaj Sayısı</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30 blue1_bg">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-clock-o"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            @{
                                double productAvg = Convert.ToDouble(ViewBag.productAvg);
                                double shiftedProductAvg = productAvg / 1000000;
                                string formattedProductAvg = shiftedProductAvg.ToString("F2");
                            }
                            <p class="total_no">@formattedProductAvg</p>
                            <p class="head_couter">Urun fiyat ortalaması</p>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30 green_bg">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-cloud-download"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.productCount</p>
                            <p class="head_couter">Urun Sayısı</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30 red_bg">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-comments-o"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.memberCount</p>
                            <p class="head_couter">Calısan Sayısı</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   
        <!-- end graph -->
        <div class="row column3">
            <div class="col-md-6">
                <div class="dark_bg full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Son Mesajlar</h2>
                        </div>
                    </div>
                    <div class="full graph_revenue">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="content testimonial">
                                    <div id="testimonial_slider" class="carousel slide" data-ride="carousel">
                                        <!-- Wrapper for carousel items -->
                                        <div class="carousel-inner">
                                            @foreach (var item in Model)
                                            {
                                                
                                            
                                            <div class="@item.Status ">
                                                <div class="img-box"><img src="@item.ImageUrl" alt=""></div>
                                                <p class="testimonial">@item.Content</p>
                                                <p class="overview"><b>@item.NameSurname</b>Üye</p>
                                            </div>

                                            }
                                        </div>
                                        <!-- Carousel controls -->
                                        <a class="carousel-control left carousel-control-prev" href="#testimonial_slider" data-slide="prev">
                                            <i class="fa fa-angle-left"></i>
                                        </a>
                                        <a class="carousel-control right carousel-control-next" href="#testimonial_slider" data-slide="next">
                                            <i class="fa fa-angle-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="dash_blog">
                    <div class="dash_blog_inner">
                        <div class="dash_head">
                            <h3><span><i class="fa fa-calendar"></i> 20 Haziran 2024</span><span class="plus_green_bt"><a href="#">+</a></span></h3>
                        </div>
                        <div class="list_cont">
                            <p>Bildirimler</p>
                        </div>
                        <div class="task_list_main">
                            <ul class="task_list">
                                <li><a href="#">Pazar araştırmaları ve tüketici trendlerinin analizi süreçlerini görüşmek üzere bir toplantı düzenliyoruz.</a><br><strong>10:00</strong></li>
                                <li><a href="#">Prototip geliştirme ve test süreçlerini planlamak ve stratejimizi belirlemek üzere bir toplantı düzenliyoruz. </a><br><strong>14:00</strong></li>
                     
                            </ul>
                        </div>
                        <div class="read_more">
                            <div class="center"><a class="main_bt read_bt" href="#">Devamını Gor</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="footer">
            <p>
                Copyright © 2018 Designed by html.design. All rights reserved.<br><br>
                Distributed By: <a href="https://themewagon.com/">ThemeWagon</a>
            </p>
        </div>
    </div>
</div>

